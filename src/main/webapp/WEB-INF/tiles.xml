<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <definition template="/WEB-INF/views/commons/layout.jsp" name="default">
        <put-attribute name="title" value="hmall"/>
        <put-attribute name="header" value="/WEB-INF/views/commons/header.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/views/commons/footer.jsp"/>
    </definition>

    <definition name="*.*" extends="default">
        <put-attribute name="dynamic_css" value="/resources/css/{1}.css"/>
        <put-attribute name="first" value="{1}"/>
        <put-attribute name="second" value="{2}"/>
        <put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
    </definition>

</tiles-definitions>