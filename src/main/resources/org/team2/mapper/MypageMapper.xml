<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.team2.mapper.MypageMapper">
    <sql id="userOrders">
    SELECT a.order_status, b.order_seq, b.op_count, b.created_at, c.product_name, c.product_cost, d.image_name
        FROM tbl_order a, tbl_op b, tbl_product c, tbl_image d
        WHERE #{alias} = a.user_seq
            AND a.order_seq = b.order_seq
            AND b.product_seq = c.product_seq
            AND c.product_seq = d.product_seq
        ORDER BY created_at DESC
    </sql>

    <select id="recentOrders" parameterType="long" resultType="map">
        SELECT *
        FROM (SELECT *
                FROM (<include refid="userOrders"><property name="alias" value="#{no}"/></include>))
        WHERE ROWNUM = 1
    </select>

    <select id="periodOrders" parameterType="long" resultType="map">
        SELECT *
        FROM (SELECT *
                FROM (<include refid="userOrders"><property name="alias" value="#{no}"/></include>))
        WHERE ROWNUM = 1
    </select>
</mapper>

